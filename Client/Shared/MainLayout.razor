@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="@MyCustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer Open="true"
               Anchor="Anchor.Left"
               Variant="DrawerVariant.Persistent"
               Elevation="1"
               Width="260px">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <LoginDisplay />
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme MyCustomTheme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#DC5F00",
            Secondary = "#686D76",
            Background = "#EEEEEE",
            Surface = "#FFFFFF",
            AppbarBackground = "#FFFFFF",
            AppbarText = "#373A40",
            DrawerBackground = "#373A40",
            DrawerText = "#EEEEEE",
            DrawerIcon = "#EEEEEE",
            TextPrimary = "#373A40",
            TextSecondary = "#686D76",
            TableLines = "#E0E0E0",
            Divider = "#E0E0E0",
            PrimaryContrastText = "#FFFFFF"
        },
        LayoutProperties = new LayoutProperties
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        }
    };
}
