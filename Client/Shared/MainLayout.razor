@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="@MyCustomTheme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudDrawer Open="true"
               Anchor="Anchor.Left"
               Variant="DrawerVariant.Persistent"
               Elevation="1"
               Width="260px">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="main-content">
        <LoginDisplay />
        @Body
    </MudMainContent>

</MudLayout>

<style>
    .main-content {
        padding: 24px;
        background-color: #EEEEEE;
        min-height: 100vh;
    }
</style>

@code {
    private MudTheme MyCustomTheme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#DC5F00",
            Secondary = "#686D76",
            Background = "#EEEEEE",
            Surface = "#FFFFFF",

            AppbarBackground = "#FFFFFF",
            AppbarText = "#373A40",

            DrawerBackground = "#373A40",
            DrawerText = "#EEEEEE",
            DrawerIcon = "#EEEEEE",

            TextPrimary = "#373A40",
            TextSecondary = "#686D76",

            Divider = "#E0E0E0",
            PrimaryContrastText = "#FFFFFF"
        },
        LayoutProperties = new LayoutProperties
        {
            DrawerWidthLeft = "260px"
        }
    };
}
